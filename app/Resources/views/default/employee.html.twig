{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-xs-4 button-group">
				<i class="fa fa-level-down fa-flip-horizontal table-arrow"></i>
				<button class="btn btn-sm btn-danger" id="deleteEmployee">Delete</button>
				<button class="btn btn-sm btn-primary" id="emailEmployee">Email</button>
			</div>
			<div class="col-xs-4 button-group-right">
				<form class="form-inline search-bar">
					<div class="form-group">
			        	<input type="text" class="form-control" placeholder="Search">
			        </div>
			        <button type="submit" class="btn btn-default">Submit</button>
			    </form>
			</div>
			<div class="col-xs-4 button-group-right">				
				<button class="btn btn-sm btn-primary" id="addEmployee">Add New Employee</button>
				<button class="btn btn-sm btn-primary" id="importCSV">Import Employee CSV</button>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
		    <table class="table table-condensed table-hover table-striped item-table">
	 			<thead>
	 				<tr>
	 					<th><input type="checkbox" class="item-table-checkbox"></th>
	 					<th>UUID</th>
		 				<th>Employee ID</th>
		 				<th>Username</th>
		 				<th>First Name</th>
		 				<th>Last Name</th>
		 				<th>Email</th>
		 				<th>Phone Number</th>
		 				<th>Deleted</th>
		 				<th></th>
	 				</tr>
	 			</thead>
	 			<tbody>
	 			{% for employee in Employees %}
	 			<tr>
	 				<td><input type="checkbox" class="item-row-checkbox">
	 				<td>{{ employee.id }}</td>
	 				<td>{{ employee.employeeID }}</td>
	 				<td>{{ employee.username }}</td>
	 				<td>{{ employee.firstName }}</td>
	 				<td>{{ employee.lastName }}</td>
	 				<td>{{ employee.email }}</td>
	 				<td>{{ employee.phoneNumber }}</td>
	 				<td>{% if employee.deleted == 0 %} No {% else %} Yes {% endif %}</td>
	 				<td>
	 					<a href="#" class="edit-row">edit</a>
	 				</td>
	 			</tr>
	 			{% endfor %}
	 			</tbody>
			</table>
			</div>	
		</div>
    </div>
{% endblock %}
